##########################################################################
############################  Frappe ORM  ################################
##########################################################################

doctype = "DocType Name"
name = 'doctype name'
filters = {"fieldname": value, 'fieldname': value}

compare_value = [">", value]
                (">", value)


frappe.db.exists(doctype, filters,)
    # => Returns True, False

frappe.db.get_single_value(doctype, fieldname)  # fieldname of the value
    # => Returns single value

frappe.db.count(doctype, filters, )
    # => count

frappe.get_doc(doctype, name)



